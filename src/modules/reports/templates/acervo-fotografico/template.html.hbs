<html>
    <head>
      <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
      <style>
        {{asset "acervo-fotografico-base.css" "utf8"}}
      </style>

    </head>
    <body class="p-5">
      {{component "header" }}
      
        <caption>
          <h3 class="text-center">
            ACERVO
          </h3>
        </caption>
        {{#each bens.data}}
          <div style="border-style: solid; border-width: 1px; border-radius: 5px; margin-bottom: 10px; page-break-inside: avoid;">
            <div style="margin: 5px 10px;">
              <p style="font-size: 12px;"><b>Tombamento:</b> {{this.tombamento}}</p>
              <p style="font-size: 12px;"><b>Descrição sintética: </b>{{this.descricao_sintetica}}</p>
              <p style="font-size: 12px;"><b>Localização: </b>{{this.localizacao_atual}}</p>
            </div>
            <div style="margin: 5px 10px;">
              {{#if this.imagens}}
                <div style="display: grid; gap: 1rem; grid-template-columns: repeat(5, 1fr);">
                {{#each this.imagens}}
                  <img src={{ arquivo.caminho }} width='100%' style="border-style: solid; border-width: 1px; border-color: #ccc; object-fit: cover; aspect-ratio: 1/1;">
                {{/each}}
                </div>
              {{else}}
                <p class="text-center">sem imagens</p>
              {{/if}}
            </div>
          </div>
        {{/each}}
        <div class="flex justify-end" style="gap: 12px;">
          <div class="text-center">
            <b>Quantidade de bens:</b> {{ bens.total }}
          </div>
        </div>
      </div>
    </body>
  </html>
